	 readTimeout="800000"
	 mkcolQuery="?archive=8640000&amp;cache=10&amp;mode=create" debug="true">
	
	<!-- authorization needed for fetching the images/files -->
	<auth><mode>BASIC</mode><user>rbnb</user><password>rbnb</password></auth>
